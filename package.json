{
  "name": "peoplecert",
  "version": "1.2.5",
  "description": "Online Exam Application",
  "main": "electron/main.js",
  "author": "peoplecert",
  "license": "ISC",
  "scripts": {
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "electron .",
    "dev:api": "cd api && npm start",
    "api": "cd api && npm start",
    "build": "vite build",
    "dist": "electron-builder",
    "build:electron": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder --publish always",
    "start": "electron ."
  },
  "build": {
    "appId": "com.onlineexam.app",
    "productName": "peoplecert",
    "asar": true,
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "electron/**",
      "!node_modules/.cache/**"
    ],
    "artifactName": "${productName}-${version}-Setup.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "manmohan-suthar",
        "repo": "exam-app",
        "releaseType": "release",  
        "vPrefixedTagName": true
      }
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^41.4.2",
    "@ckeditor/ckeditor5-react": "^11.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@tailwindcss/vite": "^4.1.17",
    "@tinymce/tinymce-react": "^6.3.0",
    "axios": "^1.13.2",
    "draftjs-to-html": "^0.9.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.553.0",
    "macaddress": "^0.5.3",
    "peerjs": "^1.5.5",
    "quill": "^2.0.3",
    "react-router-dom": "^7.9.5",
    "socket.io-client": "^4.8.1",
    "tinymce": "^8.3.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.1.2",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2"
  }
}