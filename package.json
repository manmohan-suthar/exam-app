{
  "name": "online-exam",
  "version": "1.0.0",
  "description": "Online Exam Application",
  "main": "electron/main.js",
  "license": "ISC",
"scripts": {
  "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
  "dev:vite": "vite",
  "dev:electron": "electron .",

  "dev:api": "cd api && npm start",
  "api": "cd api && npm start",

  "build": "vite build",
  "build:electron": "npm run build && electron-builder",
  "start": "electron ."
}

,
  "build": {
    "appId": "com.onlineexam.app",
    "productName": "Online Exam",
    "asar": true,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**",
      "electron/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": "nsis:x64"
    }
  },
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^41.4.2",
    "@ckeditor/ckeditor5-react": "^11.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@tailwindcss/vite": "^4.1.17",
    "@tinymce/tinymce-react": "^6.3.0",
    "axios": "^1.13.2",
    "draftjs-to-html": "^0.9.1",
    "electron-store": "^11.0.2",
    "lucide-react": "^0.553.0",
    "macaddress": "^0.5.3",
    "peerjs": "^1.5.5",
    "react-router-dom": "^7.9.5",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.1.2",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2"
  }
}
